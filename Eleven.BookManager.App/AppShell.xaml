<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Eleven.BookManager.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:root="clr-namespace:Eleven.BookManager.App"
    xmlns:local="clr-namespace:Eleven.BookManager.App.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="My Library">
    
    <ShellContent
        x:Name="MainPageContent"
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        x:Name="SettingsPageContent"
        Title="Settings"
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />

</Shell>
